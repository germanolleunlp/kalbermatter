<% if current_user %>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <% if current_user %>
            <%= active_link_to 'Orders', orders_path, wrap_tag: :li %>
            <%= active_link_to 'Products', products_path, wrap_tag: :li %>
            <%= active_link_to 'Ingredients', ingredients_path, wrap_tag: :li %>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <%= active_link_to 'Logout', destroy_user_session_path, wrap_tag: :li, method: :delete, data: { disable_with: 'Please wait...' } %>
          <% else %>
            <%= active_link_to 'Login', user_session_path, wrap_tag: :li %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
<% else %>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <%= active_link_to 'Home', home_path, wrap_tag: :li %>
          <%= active_link_to 'About us', about_path, wrap_tag: :li %>
        </ul>
      </div>
    </div>
  </nav>
<% end %>
