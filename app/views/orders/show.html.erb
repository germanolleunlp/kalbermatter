<p id="notice"><%= notice %></p>

<h1><%= @order.display_name %></h1>
<%= link_to 'Edit', edit_order_path(@order) %> | <%= link_to 'Back', orders_path %>

<hr>

<blockquote>
  <p><%= @order.description %></p>
</blockquote>

<table class='table'>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
      <th>Created</th>
    </tr>
  </thead>

  <tbody>
    <% @order.product_configurations.each do |product_configuration| %>
      <tr>
        <td><%= product_configuration.product.name %></td>
        <td><%= product_configuration.quantity %></td>
        <td><%= money product_configuration.product.price %></td>
        <td><%= money product_configuration.total %></td>
        <td><%= product_configuration.created_at.strftime("%d %b. %Y at %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Created at <%= @order.created_at.strftime("%d %b. %Y at %H:%M") %></h2>
<h2>Total: <strong><%= money @order.total %></strong></h2>
